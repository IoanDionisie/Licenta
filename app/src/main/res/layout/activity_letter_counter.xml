<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LetterCounterActivity"
    android:background="@drawable/bgnd"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >


    <TextView
        android:layout_height="80dp"
        android:layout_width="80dp"
        android:padding="10dp"
        android:text="A"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:background="@drawable/mybutton"
        android:textColor="@android:color/white"
        android:textSize="40dp"
        android:id="@+id/letterCounter"
        />

        <ImageView
            android:layout_width="260dp"
            android:layout_height="120dp"
            android:layout_below="@id/letterCounter"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/shake"
            android:id="@+id/img"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Misca telefonul pentru a alege o litera!"
            android:textColor="@android:color/white"
            android:layout_above="@id/letterCounter"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:layout_marginBottom="50dp"
            />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>