<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExitGame"
    android:background="@drawable/bgnd"
    >




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Esti sigur ca vrei sa parasesti jocul?"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_marginBottom="40dp"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:layout_marginTop="150dp"
            android:id="@+id/areYouSure"
            />


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/yes"
                android:text="Da"
                android:background="@drawable/mybutton"
                android:padding="10dp"
                android:layout_below="@+id/areYouSure"
                android:layout_alignLeft="@+id/areYouSure"
                android:layout_marginTop="30dp"
                android:ems="8"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/no"
                android:text="Nu"
                android:background="@drawable/mybutton"
                android:padding="10dp"
                android:layout_below="@+id/areYouSure"
                android:layout_alignRight="@+id/areYouSure"
                android:layout_marginTop="30dp"
                android:ems="8"
                />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>